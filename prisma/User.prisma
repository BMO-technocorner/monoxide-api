enum Role {
  CLIENT
  GUARD
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  address   String
  role      Role     @default(CLIENT)
  devices   Device[]
  rooms     Room[]
  reports   Report[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Device {
  id      Int   @id @default(autoincrement())
  owner   User? @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId Int?

  @@unique(fields: [id, ownerId], name: "belongsTo")
  @@index([ownerId])
}

model Room {
  id      Int   @id @default(autoincrement())
  owner   User? @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId Int?

  @@unique(fields: [id, ownerId], name: "belongsTo")
  @@index([ownerId])
}

model Report {
  id      Int   @id @default(autoincrement())
  owner   User? @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId Int?

  @@unique(fields: [id, ownerId], name: "belongsTo")
  @@index([ownerId])
}
